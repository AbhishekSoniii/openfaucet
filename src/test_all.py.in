# Run all unittests.

import unittest2


UNITTEST_MODULES = @UNITTEST_MODULES@


def load_tests(loader, tests, pattern):
  suite = unittest2.TestSuite()
  for module_name in UNITTEST_MODULES:
    suite.addTests(loader.loadTestsFromName(module_name))
  return suite


